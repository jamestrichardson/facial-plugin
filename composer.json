{
    "name": "jamestrichardson/facial-plugin",
    "description": "Facial Recognition Plugin for Piwigo",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "James Richardson",
            "email": "james@richardsons.us"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "files": [
            "include/functions.inc.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/coverage",
        "test-coverage-text": "phpunit --coverage-text",
        "phpcs": "phpcs --standard=PSR12 include/",
        "phpstan": "phpstan analyse include/ --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
